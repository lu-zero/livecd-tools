# $Header: $

depend() {
	need firmware
}

start() {
	ebegin "Starting hwsetup"
	[ -e /etc/sysconfig ] || mkdir -p /etc/sysconfig
	[ -x /usr/sbin/hwsetup ] && hwsetup
	eend $?
}
